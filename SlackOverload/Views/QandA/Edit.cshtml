@model Question
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

Please Edit your question:
<form asp-controller="QandA" asp-action="Edit" method="post">
    <p>
        @Html.LabelFor(m => m.Username):
        <strong>@Html.DisplayFor(m => m.Username)</strong>
    </p>
    <p>
        @Html.LabelFor(m => m.Title)
        @Html.EditorFor(m => m.Title)
    </p>
    <p>
        @Html.LabelFor(m => m.Detail)
        <textarea id="Detail" name="Detail" rows="5" cols="40">@Model.Detail</textarea>
    </p>

    <p>
        @Html.LabelFor(m => m.Tags) (just type in keywords)
        @Html.EditorFor(m => m.Tags)
    </p>

    <p>
        @Html.LabelFor(m => m.Category)
        <select asp-for="Category">
            <option>C#</option>
            <option>CSS</option>
            <option>HTML</option>
            <option>Java</option>
            <option>JavaScript</option>
        </select>
    </p>

    @Html.LabelFor(m => m.Status)
    <select asp-for="Status">
        <option value="1">Unanswered</option>
        <option value="2">Answered</option>
    </select>

    <!-- add the status field for edit -->
    <p>
        <input type="submit" />
    </p>
</form>


